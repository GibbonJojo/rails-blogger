<%= form_for(@article) do |f|%>
    <ul>
        <% @article.errors.full_messages.each do |error|%>
            <li><%= error %></li>
        <% end %>
    </ul>

    <p>
        <%= f.label :title%> <br />
        <%= f.text_field :title, placeholer: @article.title%>
    </p>

    <p>
        <%= f.label :body%> <br />
        <%= f.text_field :body, placeholer: @article.body%>
    </p>

    <p>
        <%= f.label :tag_list %> <br />
        <%= f.text_field :tag_list, placeholer: @article.tag_list %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>